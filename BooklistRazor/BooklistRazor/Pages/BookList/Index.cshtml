@page
@model BooklistRazor.Pages.BookList.IndexModel
@{
    ViewData["Title"] = "Indexs";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-8">
        <h2>BookList</h2>
    </div>
    <div class="col-4">
        <a asp-page="Create" class="btn btn-primary form-control text-white">Create New Book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border" id="myTable">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(m=>m.Books.FirstOrDefault().Author)*@
                            <label asp-for="Books.FirstOrDefault().Author"></label>

                        </th>
                        <th>
                            @*@Html.DisplayNameFor(m=>m.Books.FirstOrDefault().Author)*@
                            <label asp-for="Books.FirstOrDefault().ISBN"></label>

                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td>@Html.DisplayFor(m => item.Author)</td>
                            <td>@Html.DisplayFor(m => item.ISBN)</td>
                            <td>
                                <button asp-route-id="@item.Id" asp-page-handler="Delete" onclick="return confirm('Are you sure you want to delete this record?');" class="btn btn-danger">Delete</button>
                                <a class="btn btn-success" asp-page="Edit" asp-route-id="@item.Id">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            { <p>No Books Available.</p>}
        </form>

    </div>
</div>

    <script type="text/javascript">
    $(document).ready( function () {
    $('#myTable').DataTable();
    } );
    </script>

